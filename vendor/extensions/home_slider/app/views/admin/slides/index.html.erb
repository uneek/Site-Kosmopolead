<% include_stylesheet 'admin/slides/slides' %>

<h1>slides</h1>

<p>You can enter slides here, which will show up on the public side of your website.</p>

<table cellspacing="0" cellpadding="0" border="0" class="index" id="slides">

  <thead>
    <tr>
      <th class="slide">slide</th>
      <th class="modify">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr class="node level-1">
        <td class="slide">
          <%= image_tag slide.image(:thumb) %>
          <%= link_to slide.title, edit_admin_slide_url(:id => slide.id) %>
        </td>
        <td class="remove">
          <%= link_to image('remove', :alt => 'Remove slide'), remove_admin_slide_url(:id => slide.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<p><%= link_to image("slides/new-slide", :alt => "New slide"), {:action => :new} %></p>