<% include_stylesheet 'admin/slides/slides' %>

<h1>Gestion des Slides</h1>

<p>Vous pouvez gérer ici les slides affichés sur la page d'accueil.</p>

<table cellspacing="0" cellpadding="0" border="0" class="index" id="slides">

  <thead>
    <tr>
      <th class="slide">Slides</th>
      <th class="modify">Modifier</th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr class="node level-1">
        <td class="slide">
          <%= image_tag slide.image(:thumb) %>
          <%= link_to slide.title, edit_admin_slide_url(:id => slide.id) %>
        </td>
        <td class="remove">
          <%= link_to image('remove', :alt => 'Supprimer le slide'), remove_admin_slide_url(:id => slide.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<p><%= link_to image("slides/new-slide", :alt => "Nouveau Slide"), {:action => :new} %></p>